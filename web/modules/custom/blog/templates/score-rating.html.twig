<div>
  <div id="score" class="card bg-dark border-0">
    <div class="card-body">
      <h3 class="text-white">
        Score
      </h3>
      <hr class="score-hr">
      <div id="user-score" class="row">
        <div class="col-9">
          <span class="font-mono text-white">
            USER SCORE
          </span>
          <br>
          <span class="fw-medium text-white">Average</span>
          <br>
          <span class="text-decoration-underline text-white">Based on
            <span id="voted-users"></span>
            User Ratings</span>
        </div>
        <div class="col-3">
          <div id="square" class="square row">
            <div class="score pt-2 text-center col-12">
              <span id="average-score"></span>
            </div>
          </div>
        </div>
      </div>
      <hr class="score-hr">
      <div id="my-score" class="row" class="my-score text-white">
        <div class="col-9">
          <span class="font-mono text-white">
            MY SCORE
          </span>
          <br>
          <span id="noti" class="fw-medium my-score text-white">Hover and click to give a rating</span>
          <br>
          <div class="my-score" id="rating-btn">
            <div id="btn-group" class="btn-group" role="group">
              {% for i in 0..10 %}
                {% if i <= 3 %}
                  <button id={{ i }} type="button" class="rate-btn btn btn-outline-danger"></button>
                {% elseif i > 3 and i <=6 %}
                  <button id={{ i }} type="button" class="rate-btn btn btn-outline-warning"></button>
                {% else %}
                  <button id={{ i }} type="button" class="rate-btn btn btn-outline-success"></button>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
        <div id="rating-score" class="col-3"></div>
        <div class="" id="confirm-btn"></div>
      </div>
    </div>
  </div>

</div>
