{% if data.message %}
  <div class="container-fluid vh-100 pt-5">
    <div class="text-center text-white pb-5 pt-5 border border-white rounded">
      <h1>404 Not Found</h1>
      {{ data.message }}
    </div>
  </div>
{% else %}
  <div class="container-fluid bg-dark mb-5 rounded border border-white">
    <div class="pb-5 pt-5">
      <h1 class="text-left text-white">
        {{ data.post.title }}
      </h1>
      <div class="text-left">
        <img class="border border-white" src={{ data.post['thumbnail_uri'][0]|image_style('post_thumbnail') }}>
        <span>
          {{ data.post.body|raw }}
        </span>
      </div>
    </div>
  </div>
{% endif %}
